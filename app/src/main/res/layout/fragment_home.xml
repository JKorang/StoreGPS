<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rowansenior.storegps.HomeFragment">

    <LinearLayout
        android:id="@+id/homePageTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/mylists_loading_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/myListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myListTextView"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/homeMyListRecycler"
                android:layout_width="wrap_content"
                android:layout_height="177dp"
                android:layout_gravity="left|top"
                android:numColumns="3"
                android:overScrollMode="never"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@+id/myListTextView"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/mystores_loading_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/myStoresTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myStoresTextView"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/homeMyStoresRecycler"
                android:layout_width="wrap_content"
                android:layout_height="177dp"
                android:layout_gravity="left|top"
                android:numColumns="3"
                android:overScrollMode="never"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@+id/myStoresTextView"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/nearby_loading_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/homeNearbyStoresRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearbyStoresTextView"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myListRecycler"
                android:layout_width="wrap_content"
                android:layout_height="177dp"
                android:layout_gravity="left|top"
                android:numColumns="3"
                android:overScrollMode="never"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@+id/homeNearbyStoresRecycler"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>
