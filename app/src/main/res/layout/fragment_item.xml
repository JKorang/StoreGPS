<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/itemcardview"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:background="@android:drawable/btn_default"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="4dp">

    <GridLayout
        android:id="@+id/itemGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="16"
        android:rowCount="5">

        <TextView
            android:id="@+id/itemText"
            android:layout_width="120dp"
            android:layout_column="0"
            android:layout_row="0"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/QuantityText"
            android:layout_width="120dp"
            android:layout_column="0"
            android:layout_row="1"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="120dp"
            android:layout_column="0"
            android:layout_row="3"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black"
/>

        <ImageButton
            android:id="@+id/incQuantity"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="12"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:contentDescription=""
            android:scaleType="fitXY"
            android:src="@drawable/plus24"
            android:text="Add Item"
            android:background="#0000"
            android:padding="5dp" />

        <ImageButton
            android:id="@+id/decQuantity"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="13"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:contentDescription=""
            android:scaleType="fitXY"
            android:src="@drawable/minus24"
            android:text="Add Item"
            android:background="#0000"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/foundItem"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="14"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:contentDescription=""
            android:scaleType="fitXY"
            android:src="@drawable/checked21"
            android:text="Add Item"
            android:background="#0000"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/deleteItem"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="15"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:contentDescription=""
            android:scaleType="fitXY"
            android:src="@drawable/cross93"
            android:text="Add Item"
            android:background="#0000"
            android:padding="5dp"/>

    </GridLayout>

</android.support.v7.widget.CardView>

