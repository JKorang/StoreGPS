<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/itemcardview"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:background="@android:drawable/btn_default"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">

    <GridLayout
        android:id="@+id/itemGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="18"
        android:rowCount="5">

        <TextView
            android:id="@+id/itemText"
            android:layout_width="120dp"
            android:layout_column="0"
            android:layout_row="0"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/QuantityText"
            android:layout_width="120dp"
            android:layout_column="0"
            android:layout_row="1"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="120dp"
            android:layout_column="0"
            android:layout_row="3"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/incQuantity"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="16"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:background="#0000"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/plus24" />

        <ImageButton
            android:id="@+id/decQuantity"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="17"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:background="#0000"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/minus24" />

    </GridLayout>

</android.support.v7.widget.CardView>

